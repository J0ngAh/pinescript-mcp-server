{
  "name": "pinescript-mcp",
  "version": "0.2.0",
  "description": "PineScript Model Context Protocol",
  "main": "dist/index.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"tsc && node dist/index.js\"",
    "start": "node dist/index.js",
    "ui": "cd ui && npm run dev",
    "ui-start": "start run-ui-clean.bat",
    "ui-admin": "start run-ui-admin.bat",
    "ui-test": "start serve-test-page.bat",
    "clean": "taskkill /F /IM node.exe"
  },
  "keywords": [
    "pinescript",
    "tradingview",
    "mcp",
    "model",
    "context",
    "protocol"
  ],
  "author": "",
  "license": "Proprietary",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "dotenv": "^16.4.5",
    "node-fetch": "^2.7.0"
  }
}
