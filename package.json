{
  "name": "pinescript-mcp",
  "version": "0.2.0",
  "description": "PineScript Model Context Protocol",
  "main": "dist/index.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"tsc && node dist/index.js\"",
    "start": "node dist/index.js",
    "ui": "cd ui && npm run dev",
    "ui:clean": "start scripts\\server\\run-ui-clean.bat",
    "ui:admin": "start scripts\\server\\run-ui-admin.bat",
    "ui:test": "start scripts\\server\\serve-test-page.bat",
    "ui:express": "start scripts\\server\\run-express-server.bat",
    "ui:electron": "start scripts\\server\\run-electron-app.bat",
    "clean": "taskkill /F /IM node.exe",
    "check:network": "start scripts\\network\\check-connectivity.bat",
    "firewall:allow": "start scripts\\network\\allow-node-firewall.bat",
    "check:firewall": "start scripts\\network\\check-windows-firewall.bat"
  },
  "keywords": [
    "pinescript",
    "tradingview",
    "mcp",
    "model",
    "context",
    "protocol"
  ],
  "author": "",
  "license": "Proprietary",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@supabase/supabase-js": "^2.88.0",
    "@types/node-fetch": "^2.6.13",
    "chalk": "^4.1.2",
    "commander": "^14.0.2",
    "dotenv": "^16.4.5",
    "fastmcp": "^3.25.4",
    "node-fetch": "^2.7.0",
    "openai": "^6.14.0",
    "zod": "^4.2.1"
  }
}
